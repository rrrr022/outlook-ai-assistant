{
  "navigationFallback": {
    "rewrite": "/taskpane.html",
    "exclude": [
      "/assets/*",
      "*.js",
      "*.css",
      "*.png",
      "*.ico",
      "*.xml",
      "*.json",
      "/api/*",
      "/manifest.xml",
      "/manifest.azure.xml",
      "/manifest-production.xml"
    ]
  },
  "routes": [
    {
      "route": "/manifest.xml",
      "headers": {
        "Content-Type": "application/xml",
        "Cache-Control": "no-cache"
      }
    },
    {
      "route": "/manifest.azure.xml",
      "headers": {
        "Content-Type": "application/xml",
        "Cache-Control": "no-cache"
      }
    },
    {
      "route": "/manifest-production.xml",
      "headers": {
        "Content-Type": "application/xml",
        "Cache-Control": "no-cache"
      }
    },
    {
      "route": "/assets/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".xml": "application/xml"
  }
}
